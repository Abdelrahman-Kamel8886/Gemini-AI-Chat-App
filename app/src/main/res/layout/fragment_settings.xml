<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/page"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20sp"
        app:civ_circle_background_color="@color/white"
        app:civ_border_width="1sp"
        app:civ_border_color="@color/background2"
        android:background="@drawable/baseline_arrow_back_24"
        android:backgroundTint="@color/black"
        />


    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/back_btn"
        app:layout_constraintTop_toTopOf="@id/back_btn"
        android:layout_marginStart="10sp"
        app:layout_constraintBottom_toBottomOf="@id/back_btn"
        android:text="Settings"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginTop="20sp"
        app:layout_constraintTop_toBottomOf="@id/back_btn"
        android:background="@color/colornew2"
        android:id="@+id/ed1"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/ed1"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/share_btn"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="20sp"
                app:cardCornerRadius="10sp"
                app:cardBackgroundColor="@color/white"
                app:strokeWidth="1sp"
                app:strokeColor="@color/colornew2"

                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingVertical="5sp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/share_img"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_margin="10sp"
                        android:background="@drawable/baseline_share_24"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/share_txt"
                        app:layout_constraintStart_toEndOf="@id/share_img"
                        app:layout_constraintTop_toTopOf="@id/share_img"
                        app:layout_constraintBottom_toBottomOf="@id/share_img"
                        android:text="Share Gemini Chat APP"
                        android:textSize="14sp"
                        android:layout_marginStart="10sp"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>



            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/font_card1"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="20sp"
                app:cardCornerRadius="10sp"
                app:cardBackgroundColor="@color/white"
                app:strokeWidth="1sp"
                app:strokeColor="@color/colornew2"

                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingVertical="5sp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/font_img"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_margin="10sp"
                        android:background="@drawable/rounded_text_fields_24"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/font_txt"
                        app:layout_constraintStart_toEndOf="@id/font_img"
                        app:layout_constraintTop_toTopOf="@id/font_img"
                        app:layout_constraintBottom_toBottomOf="@id/font_img"
                        android:text="Font Size"
                        android:textSize="14sp"
                        android:layout_marginStart="10sp"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>



            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/font_card2"
                android:visibility="gone"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="20sp"
                app:cardCornerRadius="10sp"
                app:cardBackgroundColor="@color/white"
                app:strokeWidth="1sp"
                app:strokeColor="@color/colornew2"

                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingVertical="5sp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/title"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="Font"
                        android:layout_marginTop="20sp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/font_title"
                        app:layout_constraintTop_toBottomOf="@id/title"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="Font Size"
                        android:layout_marginTop="20sp"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:layout_marginStart="20sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/font_value"
                        app:layout_constraintTop_toTopOf="@id/font_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="16 pt"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:layout_marginEnd="20sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/small_t"
                        android:text="T"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@id/font_title"
                        app:layout_constraintTop_toBottomOf="@id/font_title"
                        android:layout_marginTop="20sp"
                        android:layout_marginStart="5sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/big_t"
                        android:text="T"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="@id/small_t"
                        app:layout_constraintBottom_toBottomOf="@id/small_t"
                        app:layout_constraintEnd_toEndOf="@id/font_value"
                        android:layout_marginEnd="5sp"
                        />

                    <SeekBar
                        android:id="@+id/font_size_slider"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        app:layout_constraintStart_toStartOf="@id/font_title"
                        app:layout_constraintEnd_toEndOf="@id/big_t"
                        app:layout_constraintTop_toTopOf="@id/small_t"
                        app:layout_constraintBottom_toBottomOf="@id/small_t"
                        android:max="4"
                        style="@style/Widget.AppCompat.SeekBar.Discrete"
                        android:progress="0"
                        android:progressTint="@color/gemini_blue"
                        android:thumbTint="@color/gemini_blue"
                        android:scaleY="1.5"
                        android:paddingVertical="10sp"
                        android:layout_marginHorizontal="10sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt1"
                        app:layout_constraintTop_toBottomOf="@id/font_size_slider"
                        app:layout_constraintStart_toStartOf="@id/font_title"
                        android:text="Text Preview"
                        android:layout_marginTop="30sp"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        />

                    <RelativeLayout
                        android:id="@+id/text_preview_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/txt1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="20sp"
                        android:layout_margin="16dp"
                        android:background="@drawable/edittext1"
                        android:backgroundTint="@color/colornew2"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/text_preview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hi there! I'm your AI assistant, here to help with anything you need. ðŸ˜Š"
                            android:textSize="14sp"
                            android:textColor="@android:color/black" />
                    </RelativeLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>



            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

    </ScrollView>












</androidx.constraintlayout.widget.ConstraintLayout>